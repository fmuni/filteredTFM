FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      alpha.particles;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions          [0 0 0 0 0 0 0];

internalField       uniform 0;

boundaryField
{
    inlet
    {
        type               zeroGradient;
    }

    outlet
    {
        //- If a particle leaves it leaves for good
        type            inletOutlet;
        phi             phi.particles;
        inletValue      uniform 0;
        value           uniform 0;

    }

    walls
    {
        type               zeroGradient;
    }

    frontAndBack
    {
        type               empty;
    }
}

