// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //
convertToMeters 1;

Hx  80;
Hy  18;
Hz  1;

vertices
(

    name v0 (0 0 0)
    name v1 ( $Hx 0 0)
    name v2 ( $Hx  $Hy 0)
    name v3 (0  $Hy 0)

    name v4 (0 0 $Hz)
    name v5 ( $Hx 0 $Hz)
    name v6 ( $Hx  $Hy $Hz)
    name v7 (0  $Hy $Hz)

);

blocks
(
  hex (v0 v1 v2 v3 v4 v5 v6 v7) (100 20 1 )  simpleGrading (50 1 1)
);

edges
(
);

faces
(
);


defaultPatch
{
}

boundary
(

    inlet
    {
        type      patch;
//        type    cyclic;
//        neighbourPatch outlet;
        faces   ((v0 v3 v7 v4));
    }

    outlet
    {
        type      patch;
//        type    cyclic;
//        neighbourPatch inlet;
        faces   ((v1 v5 v6 v2));
    }

    symmetry0
    {
        type    empty;
        faces   ((v0 v1 v2 v3));
    }

    symmetry1
    {
        type    empty;
        faces   ((v4 v7 v6 v5));
    }

    walls
    {
        type    wall;
        faces   (
                  (v0 v1 v5 v4)
                  (v3 v2 v6 v7)
                );
    }


);

