FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "constant";
    object      fvOptions;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

option1
{
    type            meanVelocityForce;

    selectionMode   all;                    // Apply force to all cells
    fields          (U.particles);        // Name of velocity field
    Ubar            (1 0 0);             // Desired mean velocity
    relaxation      0.3;                    // Optional relaxation factor

}


